{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalPassThroughEnv": ["NODE_ENV"],
  "tasks": {
    "local": {
      "cache": false,
      "persistent": true,
      "env": ["JAVA_HOME", "GRADLE_OPTS", "PATH"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "server:local": {
      "cache": false,
      "persistent": true,
      "interactive": true,
      "env": ["JAVA_HOME", "GRADLE_OPTS", "PATH"]
    }
  },
  "ui": "tui"
}
